
# ---------------------------------------------------------
# History Control
# ---------------------------------------------------------
HISTSIZE=2000
HISTFILESIZE=2000
HISTTIMEFORMAT="%m/%d/%y %T "
# avoid duplicates..
export HISTCONTROL=ignoredups:erasedups

# ---------------------------------------------------------
# Alias
# ---------------------------------------------------------
alias ls='ls --color=always'
alias ll='ls -l'
alias la='ls -la'
alias cd..='cd ..'
alias lsd='ls -ld */'
alias lsh='ls -d .*'

# Common task alias
alias confvim='vim -R ~/.vim/vimrc'
alias confshell='vim -R ~/.bashrc'

# ---------------------------------------------------------
# Appliction Initialization
# ---------------------------------------------------------
eval "$(fzf --bash)"
eval "$(zoxide init bash)"

# ---------------------------------------------------------
cd ~/Documents
